<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.foodsgully.foodsgullyuser.fragments.HomeFragment">


    <EditText
        android:id="@+id/editTextTextPersonName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_22sdp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="@dimen/_22sdp"
        android:background="@drawable/search_box"
        android:backgroundTint="@color/colorSearchBackground"
        android:drawableEnd="@drawable/ic_search"

        android:elevation="@dimen/_2dp"
        android:ems="10"
        android:hint="@string/hint_search_product"
        android:inputType="textPersonName"
        android:paddingStart="@dimen/_21sdp"
        android:paddingTop="@dimen/_8sdp"
        android:paddingEnd="@dimen/_21sdp"
        android:paddingBottom="@dimen/_8sdp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>