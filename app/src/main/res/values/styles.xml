<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="LoginHeaderText">
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:textSize">@dimen/_25sdp</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
    </style>

    <style name="edit_text_appearance">
        <item name="android:textColor">@color/edit_text_color_grey</item>
        <item name="android:textSize">@dimen/_12ssp</item>
        <item name="android:fontFamily">@font/roboto</item>
    </style>

    <style name="input_text_error">
        <item name="android:textColor">@color/input_error_color</item>
        <item name="android:textSize">@dimen/_11ssp</item>
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textStyle">italic</item>
    </style>

    <style name="login_button">
        <item name="android:background">@drawable/button_with_rounded_corners</item>
        <item name="android:backgroundTint">@color/btn_login_color</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textSize">@dimen/_16ssp</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:textAllCaps">false</item>
    </style>



</resources>